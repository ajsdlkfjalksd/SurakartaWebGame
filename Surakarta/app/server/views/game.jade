
extends layout
block style
	meta(charset='UTF-8')
	title Surakarta
	link(rel='stylesheet', href='/css/q1.css')
	style.
		* {
			margin: 0;
			padding: 0;
			box-sizing: border-box;
		}

		body {
			font: 16px Helvetica, Arial;
		}

		form {
			background: #000;
			padding: 3px;
			position: fixed;
			bottom: 0;
			width: 100%;
		}

		form input {
			border: 0;
			padding: 10px;
			width: 80%;
			margin-right: .5%;
		}

		form button {
			width: 19%;
			background: rgb(130, 224, 255);
			border: none;
			padding: 10px;
		}

		#messages {
			list-style-type: none;
			margin: 0;
			padding: 0;
		}

		#messages li {
			padding: 5px 10px;
		}

		#messages li:nth-child(odd) {
			background: #eee;
		}

block content

	nav.navbar.navbar-default.navbar-fixed-top
		.container
			.navbar-header
				.navbar-brand Surakarta
			ul.nav.navbar-nav.navbar-right
				li
					.navbar-btn#btn-back-home.btn.btn-default
						| Back to Home
					.navbar-btn#btn-logout.btn.btn-default
						| Sign Out

	h3#gs(style="display: none; margin-top:5%; position:fixed;") Game Start!
	h4#green(style="display: none; margin-top:7%; position:fixed;") You are the Green one
	h4#blue(style="display: none; margin-top:7%; position:fixed;") You are the Blue one
	ul#messages(style="margin-top: 60px; height: 50%;")
	form#inputf(action='' style="")
		input#m(autocomplete='off' type='text', placeholder='Input the name of the room you want to create or join here')
		button Join or create a room
	img#map(src='/img/Surakarta.jpg', style="margin-top:10%; display: none; position:relative;", draggable='false', width='512')
	#drawbox
	button#stop(onclick='lost()' style="display: none;position:relative; font-size: 30px;") Surrender

	include modals/alert

block scripts
	script(src='/vendor/jquery-2.2.3.min.js')
	script(src='/vendor/jquery.form.min.js')
	script(src='/vendor/bootstrap.min.js')
	script(src='/socket.io/socket.io.js')
	script(src='/js/q1.js')
	script(src='/js/views/home.js')
	script(src='/js/controllers/homeController.js')
	script(src='/js/form-validators/accountValidator.js')